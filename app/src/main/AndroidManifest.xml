<?xml version="1.0" encoding="UTF-8"?>

    <manifest package="com.codingwithme.recipeapp" xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-permission android:name="android.permission.INTERNET"/>


    <application android:theme="@style/Theme.RecipeApp"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:allowBackup="true">


    <activity android:name=".HomeActivity" android:screenOrientation="locked">

    <intent-filter>

    <action android:name="android.intent.action.MAIN"/>

    <category android:name="android.intent.category.LAUNCHER"/>

</intent-filter>

</activity>

    <activity android:name=".HomeActivity" android:screenOrientation="locked"/>


</application>

</manifest>